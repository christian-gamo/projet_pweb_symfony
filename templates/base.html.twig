                  </li>
                  {% endif %}
                  {% if is_granted('ROLE_CLIENT') %}
                  <li class="nav-item">
                      <a class="nav-link" href="liste_des_vehicules_louees">Liste des véhicules loués</a>
                  </li>
                  {% endif %}
                  {% if is_granted('ROLE_LOUEUR') %}
                  <li class="nav-item">
                      <a class="nav-link" href="/ajoutVehicule">Ajout de véhicules</a>
                  </li>          
                  {% endif %}
                  {% if is_granted('ROLE_LOUEUR') %}
                  <li class="nav-item">
                    <a class="nav-link" href="liste_des_facturations">Liste des facturations</a>
                </li>        
                  {% endif %}
