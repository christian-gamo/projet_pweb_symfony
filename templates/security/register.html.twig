{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<body style="display: block;background-image: url('/img/video.jpg')">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>S'inscrire</h1>

    {% form_theme registrationForm 'bootstrap_4_horizontal_layout.html.twig' %}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.isLoueur, {
            label: 'Sélectionner votre affiliation'
        })}}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Vendre son âme à JMI Industries'
        }) }}

        <button type="submit" class="btn btn_connexion">S'inscrire</button>
    {{ form_end(registrationForm) }}
    </body>
{% endblock %}
